# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# Basic configuration
aws_region   = "ca-central-1"  # Canada region for cost efficiency
project_name = "powerlifting-analytics"
environment  = "dev"  # Use "prod" only when ready

# Optional: Custom domain name (leave empty to use CloudFront domain)
# domain_name = "powerlifting.example.com"

# Database configuration - RDS PostgreSQL (cost-optimized)
db_master_username = "powerlifting_admin"
db_master_password = "YourSecurePassword123!"  # Change this!
db_name           = "powerlifting"

# RDS instance configuration - optimized for low cost
db_instance_class      = "db.t3.micro"  # Free tier eligible
db_allocated_storage   = 20             # Free tier: 20GB
db_max_allocated_storage = 100          # Auto-scaling limit
backup_retention_period = 0             # No backups for cost savings
create_read_replica    = false          # No replica for cost savings

# Network configuration - set these if you have existing VPC
create_vpc = true  # Set to false if you want to use existing VPC
# vpc_id             = "vpc-xxxxxxxx"
# private_subnet_ids = ["subnet-xxxxxxxx", "subnet-yyyyyyyy"]
# public_subnet_ids  = ["subnet-zzzzzzzz", "subnet-aaaaaaaa"]

# Lambda configuration - minimal for cost
lambda_memory_size = 512  # Minimum reasonable size
lambda_timeout     = 30   # Keep short to avoid costs

# Performance monitoring (costs extra - keep disabled)
enable_performance_insights = false